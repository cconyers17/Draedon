# Environment Variables Template for Text-to-CAD Application
# Copy this file to .env and fill in the required values

# Application Environment
NODE_ENV=development
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/textcad_dev
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=5
REDIS_TIMEOUT=5

# Security
SECRET_KEY=your-secret-key-here-change-in-production
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# External API Keys (Required for 3D generation features)
MESHY_AI_API_KEY=your-meshy-ai-api-key
TRELLIS_3D_API_KEY=your-trellis-3d-api-key
RODIN_AI_API_KEY=your-rodin-ai-api-key

# OpenCASCADE Configuration
OPENCASCADE_WASM_PATH=./public/opencascade

# Performance Configuration (Development)
MAX_WORKERS=2
WORKER_TIMEOUT=120
WORKER_CLASS=uvicorn.workers.UvicornWorker
KEEP_ALIVE=2
MAX_REQUESTS=100
MAX_REQUESTS_JITTER=10

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=colorized

# File Upload Limits
MAX_FILE_SIZE=50MB
UPLOAD_DIR=./uploads
TEMP_DIR=./tmp

# Cache Settings
CACHE_TTL=1800
CACHE_MAX_SIZE=500

# Rate Limiting (Relaxed for development)
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_BURST=20

# Monitoring
ENABLE_METRICS=false
METRICS_PORT=9090

# Feature Flags
ENABLE_3D_API_FALLBACK=true
ENABLE_PROGRESSIVE_MESH_LOADING=false
ENABLE_ADVANCED_MATERIALS=false

# CDN Configuration (Development)
STATIC_FILES_URL=http://localhost:3000
ASSETS_CDN_URL=http://localhost:3000

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_INTERVAL=30

# Development Tools
ENABLE_DEBUG_TOOLBAR=true
ENABLE_RELOAD=true