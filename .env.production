# Production Environment Variables for Text-to-CAD Application
# These variables should be configured in Render.com dashboard

# Application Environment
NODE_ENV=production
ENVIRONMENT=production

# Database Configuration
DATABASE_URL=postgresql://textcad_user:${POSTGRES_PASSWORD}@text-to-cad-postgres:5432/textcad_production
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30

# Redis Configuration
REDIS_URL=redis://text-to-cad-redis:6379/0
REDIS_POOL_SIZE=10
REDIS_TIMEOUT=5

# Security
SECRET_KEY=${SECRET_KEY}
CORS_ORIGINS=https://text-to-cad-frontend.onrender.com
ALLOWED_HOSTS=text-to-cad-backend.onrender.com,localhost

# External API Keys (to be set in Render dashboard)
MESHY_AI_API_KEY=${MESHY_AI_API_KEY}
TRELLIS_3D_API_KEY=${TRELLIS_3D_API_KEY}
RODIN_AI_API_KEY=${RODIN_AI_API_KEY}

# OpenCASCADE Configuration
OPENCASCADE_WASM_PATH=/app/static/opencascade

# Performance Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=300
WORKER_CLASS=uvicorn.workers.UvicornWorker
KEEP_ALIVE=5
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# File Upload Limits
MAX_FILE_SIZE=100MB
UPLOAD_DIR=/app/uploads
TEMP_DIR=/tmp/text-to-cad

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_3D_API_FALLBACK=true
ENABLE_PROGRESSIVE_MESH_LOADING=true
ENABLE_ADVANCED_MATERIALS=true

# CDN Configuration
STATIC_FILES_URL=https://text-to-cad-assets.onrender.com
ASSETS_CDN_URL=https://text-to-cad-assets.onrender.com

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_INTERVAL=30