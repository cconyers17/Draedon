# Environment configuration example
# Copy to .env and update with your values

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Text-to-CAD API
VERSION=1.0.0
DEBUG=false

# Security
SECRET_KEY=your-secret-key-here-use-secrets-token-urlsafe-32
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS (comma-separated origins)
BACKEND_CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=text_to_cad_user
POSTGRES_PASSWORD=secure_password_here
POSTGRES_DB=text_to_cad
# DATABASE_URL will be auto-generated or use Render's DATABASE_URL

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
# REDIS_URL will be auto-generated or use Render's REDIS_URL

# File Storage
USE_S3=false
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=text-to-cad-files
LOCAL_STORAGE_PATH=/tmp/text-to-cad
MAX_UPLOAD_SIZE=104857600

# External APIs
MESHY_API_KEY=
MESHY_API_URL=https://api.meshy.ai
MESHY_FREE_LIMIT=200

TRELLIS_API_KEY=
TRELLIS_API_URL=https://api.trellis3d.com

RODIN_API_KEY=
RODIN_API_URL=https://api.rodin.ai

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Background Tasks
USE_CELERY=true
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# NLP Configuration
SPACY_MODEL=en_core_web_lg
NLP_CACHE_TTL=3600

# CAD Configuration
DEFAULT_EXPORT_FORMAT=STEP
SUPPORTED_EXPORT_FORMATS=["STEP","IFC","STL","OBJ","DXF","IGES"]
CAD_PRECISION=0.001
MAX_COMPLEXITY_LEVEL=3

# Monitoring
SENTRY_DSN=
ENABLE_METRICS=true
METRICS_PORT=9090

# Deployment
PORT=8000
HOST=0.0.0.0
WORKERS=4
RENDER=false