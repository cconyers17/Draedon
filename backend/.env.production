# Production Environment Variables for Backend
# These will be set automatically by Render
DATABASE_URL=postgresql://user:password@host:port/database
REDIS_URL=redis://localhost:6379
SECRET_KEY=your-secret-key-here
DEBUG=False
RENDER=True

# CORS Settings
CORS_ORIGINS=https://text-to-cad-frontend.onrender.com,http://localhost:3000

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=Text-to-CAD Architecture API
VERSION=1.0.0

# Server Settings
HOST=0.0.0.0
PORT=10000
WORKERS=1

# NLP Settings
SPACY_MODEL=en_core_web_sm
NLP_CACHE_TTL=3600

# File Settings
MAX_FILE_SIZE=104857600
UPLOAD_DIR=/tmp/uploads

# Monitoring
ENABLE_METRICS=True
SENTRY_DSN=

# External APIs (set if using)
MESHY_API_KEY=
TRELLIS_API_KEY=
RODIN_API_KEY=